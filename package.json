{
  "name": "fastmail-mcp-server",
  "version": "0.5.3",
  "description": "MCP server for Fastmail - read, search, and send emails via Claude",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "fastmail-mcp-server": "src/index.ts"
  },
