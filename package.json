  },
  "homepage": "https://github.com/radiosilence/fastmail-mcp-server#readme",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "officeparser": "^6.0.4",
    "sharp": "^0.34.5",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
